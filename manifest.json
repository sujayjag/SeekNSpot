{
  "manifest_version": 3,
  "name": "SeekNSpot",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "type": "module"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "https://*.openai.com/"
  ],
  "permissions": [
    "sidePanel",
    "declarativeNetRequest",
    "notifications"
  ]
}
